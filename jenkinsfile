pipeline {
    agent any

    tools {
        nodejs "node22"
    }

    environment {
        IMAGE_NAME = "node-hello-world"
        DOCKERHUB_USER = "your-dockerhub-username"
    }

    stages {
        stage('Verify Node') {
            steps {
                sh '''
                    echo "üîç Verifying Node.js and npm versions..."
                    node -v
                    npm -v
                '''
            }
        }

        stage('Test Docker') {
            steps {
                sh '''
                    echo "üê≥ Testing Docker installation..."
                    docker run hello-world
                '''
            }
        }

        stage('Clone Repo') {
            steps {
                git 'https://github.com/cloudvaishu/nodejs-docker-helloworld.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "üî® Building Docker image..."
                    docker build -t $IMAGE_NAME .
                '''
            }
        }

        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh '''
                        echo "üîê Logging into DockerHub..."
                        echo $PASSWORD | docker login -u $USERNAME --password-stdin
                    '''
                }
            }
        }

        stage('Push Image') {
            steps {
                sh '''
                    echo "üì§ Pushing image to DockerHub..."
                    docker tag $IMAGE_NAME $DOCKERHUB_USER/$IMAGE_NAME:latest
                    docker push $DOCKERHUB_USER/$IMAGE_NAME:latest
                '''
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                    echo "üöÄ Deploying container..."
                    docker run -d -p 3000:3000 --name node-app $DOCKERHUB_USER/$IMAGE_NAME:latest
                '''
            }
        }
    }
}
